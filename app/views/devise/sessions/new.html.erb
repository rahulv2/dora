<div class="container login-container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue</h1>
            <div class="account-wall">
                <%= image_tag "dora.jpg", class: "profile-img" %>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
                  <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email" %>
                  <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
                  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
                  <%= link_to "Need help? ", new_password_path(resource_name), class: "pull-right need-help" %><span class="clearfix"></span>
                <% end %>
                </form>
            </div>
        </div>
    </div>
</div>
<%= content_for :head do %>
  <%= stylesheet_link_tag "login" %>
<% end %>
