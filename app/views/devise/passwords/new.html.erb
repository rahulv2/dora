<div class="container login-container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <%= image_tag "dora.jpg", class: "profile-img" %>
               	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
                  <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email" %>
                  <%= f.submit "Send password instructions", class: "btn btn-lg btn-primary btn-block" %>
                  <%= link_to "Go back to login page", new_user_session_path, class: "pull-right need-help" %><span class="clearfix"></span>
                <% end %>
                </form>
            </div>
        </div>
    </div>
</div>
<%= content_for :head do %>
  <%= stylesheet_link_tag "login" %>
<% end %>
