<%= form_for(member) do |f| %>
  <%= render "shared/error_messages", object: member %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.label :ip_address %>
        <%= f.text_field :ip_address, class: "form-control", placeholder: "IP Address" %>
      </div>
      <div class="form-group">
        <%= f.label :host_name %>
        <%= f.text_field :host_name, class: "form-control", placeholder: "Host Name" %>
      </div>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
